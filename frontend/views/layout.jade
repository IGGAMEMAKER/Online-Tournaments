mixin drawBalance()
	if session.login && session.login.length>0
		center
			div(class="balance" style="width:100%; background-color:#222;")
				span(id="balance") #{session.login}     
				a(href="profile#dep") Пополнить   
				span /   
				a(href="profile#cashoutMoney") Снять
mixin drawMyPoints()
	if session.login && session.login.length>0
		center
			div(class="balance" style="width:100%; background-color:#222;")
				span(id="mypoints") Баллы     
				//a(href="/Marathon#points") что это
				+getMyPoints()


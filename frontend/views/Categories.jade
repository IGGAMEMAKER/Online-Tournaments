mixin rating()
	h3(class="text-center ratingHead") Марафон
		br
		a(href="Leaderboard") все участники
	include templates/rating

mixin drawCategory(category)
	div(class="col-sm-3 white img-wrapper")
		//h2(class="text-center") #{category.draw.name}
		center
			a(href="/Category/"+category.name)
				img(width="150" class="img-responsive circle-md" src=category.draw.imgSmall)
				p #{category.draw.name}
	
extends layout

block title
	title Темы

//block ftr

block content
	include templates/news
	h1(class="white text-center") Темы
	//p!= JSON.stringify(msg)
	each cat in msg
		+drawCategory(cat)
	//div(class="col-sm-12 bgc-white" id="ratingField")
		div(class="col-sm-8 dataRule2")
			+rating()
		div(class="col-sm-4 subscribe")
			+subscribe()
	div(class="col-sm-12 offset-bg")
		h2(class="white text-center") Нет интересной темы?
		h3(class="white text-center") Предложи свою тему в комментариях!
		+chat()


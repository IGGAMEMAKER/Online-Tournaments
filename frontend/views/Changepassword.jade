doctype html
html
	head
		title Login
		include templates/head
	div(class="page-container")
		include templates/menu
		div(class='bloc-group')
			if msg
				case msg.result
					when 'OK'
						p Пароль успешно изменён
						a(class="btn btn-lg btn-primary" style="width:100%; border-radius:6px; " href="profile" type="submit") Вернуться в профиль
					when 'ServerError'
						p!= 'Ошибка сервера'
						include templates/changepassword
					default
						p!= 'Ошибка: ' + msg.result
						include templates/changepassword
			else
				include templates/changepassword
		include templates/footer


//html
	head
		title Change password
	body
		h1 Change password
		#result
			if msg
				case msg.result
					when 'OK'
						p!= 'Password changed!'
					when 'ServerError'
						p!= 'Server error. Contact support to fix it'
					when 'fail'
						p!= 'Invalid login or password'
					default
						p!= 'Error: ' + msg.result
		//div.Change
		//form(name="Changepassword", action="/Changepassword", method="post")
			p Password
			input(type="password", name="password")
			p Password again
			input(type="password", name="passwordRepeat")
			p Enter new password
			input(type="password", name="newpassword")
			br
			br
			input(type="submit", value="Change password")
		//br
		//br
		a(href="Profile") Back to profile

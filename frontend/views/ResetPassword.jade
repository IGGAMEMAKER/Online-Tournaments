html
	head
		title Reset password
	body
		h1 Reset password
		#result
		if msg
			case msg.result
				when 'OK'
					p!= 'Password changed! Check your email'
				when 'ServerError'
					p!= 'Server error. Contact support to fix it'
				when 'fail'
					p!= 'Invalid email or login'
				default
					if msg.result
						p!= 'Error: ' + msg.result
					else
						p!= 'Error: ' + JSON.stringify(msg)
		div.loginbox
		form(name="ResetPassword", action="/ResetPassword", method="post")
			p Login
			input(type="text", name="login")
			p Email
			input(type="text", name="email")
			br
			br
			input(type="submit", value="Reset password")
		a(href="Login") Login

doctype html
html
	head
		title Сброс пароля
		include templates/head
	div(class="page-container")
		include templates/menu
		#result
		if msg
			case msg.result
				when 'OK'
					p!= 'Password changed! Check your email'
				when 'ServerError'
					p!= 'Server error. Contact support to fix it'
				when 'fail'
					p!= 'Invalid email or login'
				default
					if msg.result
						p!= 'Error: ' + msg.result
					else
						p!= 'Error: ' + JSON.stringify(msg)
		div(class='bloc-group')
			include templates/remember
			//include templates/register
		include templates/footer



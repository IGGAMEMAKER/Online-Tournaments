block title
	title #{draw.name}

block content
	div(class="white")
		div(class="col-sm-12")
			h1(class="mg-md text-center") Эта страница посвящена #{draw.name_dat}
			//h1(class="mg-md text-center") Эта страница посвящена #{JSON.stringify(draw)}
			p #{category}
			p Мы проводим онлайн–турниры,

		div(class="col-sm-12")
			//h1(class="mg-md text-center") Добавьте свой вопрос!
			//include AddQuestion
			//div(class="col-sm-12 col-xs-12 col-md-12")
				include templates/addQ
		div(class="col-sm-12")
			+tabArea()


mixin tabs()
	ul(class="nav nav-tabs")
		li(class="active")
			a(href="#tab1" onclick="loadRating()" data-toggle="tab" aria-expanded="true") Марафон
		li
			a(href="#tab2" data-toggle="tab" aria-expanded="false") Вопросы
		li
			a(href="#tab3" data-toggle="tab" aria-expanded="false") Игроки
		li
			a(href="#tab4" data-toggle="tab" aria-expanded="false") Карточки
mixin tabArea()
	//include templates/addQ

	div(class="row")
		+tabs()
		div(class="tab-content")
			div(class="tab-pane active" id="tab1")
				a(href="#" onclick="loadRating()") Обновить
				//div(class="white")
				div(class="col-sm-12 bgc-white" id="ratingField")
					div(class="dataRule2")
						//+rating()
						br
						center
							h3
								a(href="/Leaderboard") Все участники
						include templates/rating
			div(class="tab-pane" id="tab2")
				+questions()
			div(class="tab-pane" id="tab3")
				p Tab3
			div(class="tab-pane" id="tab4")
				p tab4

mixin questions()
	include templates/addQ

